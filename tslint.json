{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-clean-code"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "newspaper-order": true,
    "max-line-length": [
      true,
      200
    ],
    "max-func-args": [
      true,
      3
    ]
  }
}
